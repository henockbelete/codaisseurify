
<div class="fsongoup">
  <label>Song name:</label>
  <%= f.text_field :song_name, placeholder: "Song title", class: "form-control", id:"songnameInput" %>

  <div class="form-group">
    <label>Genre:</label>
    <%= f.text_field :genre, placeholder: "hip hop", class: "form-control", id: "genreInput" %>
  </div>

<hr>
  <div class="actions">
