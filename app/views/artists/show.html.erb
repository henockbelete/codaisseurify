
<%= link_to 'Back', artists_path %>

<h1><%= @artist.name %></h1>

<p>Age: <%= @artist.age %></p>
<p>Nationality: <%= @artist.nationality %></p>
<%= image_tag @artist.image_url %>

<h4>List of Songs</h4>

<% if @artist.songs.any? %>
  <ul>
    <% @artist.songs.each do |song| %>
    <li><%=link_to song.song_name, :controller => :songs, :action => :show  %></li>
    <% end %>
  </ul>
<% else %>
  <p>There are no songs of this Artist.</p>
<% end %>

<hr>

<%= link_to "[New Song]", :controller => :songs, :action => :new %>
<%= link_to "[Delete]", artist_path(@artist.id), method: :delete, data: { confirm: "Are you sure?" } %>


